<?xml version="1.0" encoding="UTF-8"?>

<config>

	<gateway id="gateway1">
		<routing>
			<route source="0" destination="1">
				<canframe canId="1"/>
				<canframe canId="2"/>
				<canframe canId="3"/>
			</route>
		</routing>
		<buffering>
			<pool>
				<holdup time="5ms">
					<canFrame canId="1"/>
				</holdup>
				<holdup time="10ms">
					<canframe canId="2"/>
				</holdup>
			</pool>
		</buffering>
		<transformation>
			<canToEthernet>
				<canFrame canId="1"/>
				<canframe canId="2"/>
				<canframe canId="3"/>
				<ethernetframe dst="0A-00-00-00-00-04"/>
			</canToEthernet>
		</transformation>
	</gateway>
	
	<gateway id="gateway2">
		<routing>
			<route source="1" destination="0">
				<ethernetframe dst="0A-00-00-00-00-04"/>
			</route>
		</routing>
		<buffering>
		</buffering>
		<transformation>
			<ethernetToCan>
				<ethernetframe dst="0A-00-00-00-00-04"/>
				<canFrame canId="1"/>
				<canframe canId="2"/>
				<canframe canId="3"/>
			</ethernetToCan>
		</transformation>
	</gateway>
	
</config>